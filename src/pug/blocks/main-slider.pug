section.main-slider.swiper-container
  .main-slider__wrapper.swiper-wrapper
    each slider in pages.index.sliders.content
      article.main-slider__slide.swiper-slide(class=slider.modClass)
        .main-slider__wrapper
          h2.main-slider__title #{slider.title}
          p.main-slider__description #{slider.description}
          a.button(href=slider.buttonSrc) Узнать больше
        img.main-slider__image(src=slider.imgSrc alt=slider.title)
  .main-slider__controls
