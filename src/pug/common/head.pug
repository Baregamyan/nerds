block head
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    each font in site.fonts
      link(rel="preload" href=`fonts/${font.name}.woff` as="font")
      link(rel="preload" href=`fonts/${font.name}.woff2` as="font")
    each stylesheet in site.stylesheets
      link(rel="stylesheet" href=`css/${stylesheet.name}.css`)
    link(rel='apple-touch-icon' sizes='180x180' href='images/apple-touch-icon.png')
    link(rel='icon' type='image/png' sizes='32x32' href='images/favicon-32x32.png')
    link(rel='icon' type='image/png' sizes='16x16' href='images/favicon-16x16.png')
    link(rel='manifest' href='/site.webmanifest')

    title #{currentPageTitle}
